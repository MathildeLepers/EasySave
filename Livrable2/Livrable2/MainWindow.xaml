<Window x:Class="Livrable2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Livrable2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="77,51,0,0" Text="Choose a language" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <CheckBox x:Name="FR" Content="Français" HorizontalAlignment="Left" Margin="200,55,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="EN" Content="English" HorizontalAlignment="Left" Margin="287,55,0,0" VerticalAlignment="Top"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="369,53,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.597,0.169" Click="Button_Click"/>
        <TextBlock x:Name="Test" HorizontalAlignment="Left" Margin="77,72,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="29"/>
        <TextBlock x:Name="Select" HorizontalAlignment="Left" Margin="231,86,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="101"/>

    </Grid>
</Window>
