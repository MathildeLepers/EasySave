<Window x:Class="Livrable2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Livrable2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="TextBlock" TextWrapping="Wrap"/>
        <TextBlock HorizontalAlignment="Left" Margin="246,150,0,0" Text="Choose a language" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <RadioButton x:Name="FrenchButton" Content="Français" HorizontalAlignment="Left" Margin="366,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.343,-0.71" Checked="RadioButton_Checked"/>
        <RadioButton x:Name="EnglishButton" Content="English" HorizontalAlignment="Left" Margin="454,152,0,0" VerticalAlignment="Top"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="540,149,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.597,0.169" Click="Button_Click"/>
    </Grid>
</Window>
